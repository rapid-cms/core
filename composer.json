{
    "name": "rapid-cms/core",
    "description": "This is the core for RapidCMS project",
    "version": "0.1",
    "keywords": [
        "rapid-cms",
        "laravel",
        "core"
    ],
    "homepage": "https://github.com/rapid-cms/core",
    "license": "MIT",
    "authors": [
        {
            "name": "rapid-cms",
            "email": "rapid-cms@devsbuddy.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3||^8.4",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9||^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0||^8.22.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.3||^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.1||^2.0",
        "phpstan/phpstan-phpunit": "^1.3||^2.0"
    },
    "autoload": {
        "psr-4": {
            "RapidCMS\\Core\\": "src/",
            "RapidCMS\\Core\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RapidCMS\\Core\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "RapidCMS\\Core\\RapidCMSServiceProvider"
            ],
            "aliases": {
                "RapidCMS": "RapidCMS\\Core\\Facades\\RapidCMS"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
